<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper  namespace="com.vic.shiro_app.mapper.PermissionMapper">
    <resultMap id="SysPermission" type="com.vic.shiro_app.model.SysPermission">
        <id column="id" property="id" javaType="INTEGER"/>
        <result column="parent_id" property="parentId" jdbcType="INTEGER"/>
        <result column="res_name" property="resName" jdbcType="VARCHAR"/>
        <result column="res_type" property="resType" jdbcType="VARCHAR"/>
        <result column="permission" property="permission" jdbcType="VARCHAR"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>

    </resultMap>
    <select id="getAllPermissions" resultMap="SysPermission">
        select * from sys_permission
    </select>
    <select id="getPermissionsByParentId" parameterType="integer" resultMap="SysPermission">
        SELECT  * from sys_permission where parent_id = #{parentId}
    </select>


</mapper>